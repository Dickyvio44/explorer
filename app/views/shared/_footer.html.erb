<footer>
  <div class="container-fluid mt-5 mb-5 text-center">
    <div style="margin-bottom: 5px;">
        <% for chain in BLOCKCHAINS %>
          <%= link_to network_icon(chain), "/#{chain[:network]}", {title: t("pages.footer.explorer", network:chain[:name])}%>
        <% end %>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-auto col-12 ad-container mx-auto">
        <div style="display: flex; justify-content: center;">
          <ins
            class="adsbyslise"
            style="display:inline-block;width:728px;height:90px"
            data-ad-slot="leaderboard"
            data-ad-pub="pub-11"
            id="ad-ins"
          ></ins>
        </div>
        <script async src="https://v1.slise.xyz/scripts/embed.js"></script>
        <script>
          var adElement = document.getElementById('ad-ins');
          if(window.innerWidth < 728) {
            adElement.style.width = '270px';
            adElement.setAttribute('data-ad-format', '270x90');
          } else {
            adElement.setAttribute('data-ad-format', '728x90');
          }

          setTimeout(function(){
            ;(adsbyslise=window.adsbyslise||[]).push({slot:"leaderboard"});
            window.adsbyslisesync&&window.adsbyslisesync();
          }, 2200);
        </script>
      </div>
    </div>
    <%= t 'pages.footer.built' %>
    <%= link_to t('pages.footer.widgets'), 'https://github.com/bitquery/widgets' %>
    <i class="fab fa-github"></i>

    <%= t 'pages.footer.by' %>
    <%= link_to t('pages.footer.created'), 'https://bitquery.io' %><br>

    <span style="font-size: 80%;">
    <%= t 'pages.footer.feel_free' %></span>
    <p>
      <i class="fa fa-briefcase"></i> <%= link_to "We are hiring", 'https://angel.co/company/bitquery/jobs', target: '_blank' %>
      |
      <i class="fas fa-ad"></i> <%= link_to "Media kit", 'https://bitquery.io/go/media-kit', target: '_blank' %>
      |
      <i class="fa fa-info-circle"></i> <%= link_to "Crypto News", 'https://coincodecap.com/?utm_source=bitquery', target: '_blank' %> Partner
      |
      <%= image_tag 'discord-logo.svg', width: 16, style: 'margin-top: -4px' %> <%= link_to "Out Discord", 'https://discord.gg/EEBVTQnb2E', target: '_blank' %>

    </p>
  </div>
  <%= render partial: 'shared/ads/fixed' %>
</footer>
<%= render partial: 'shared/ads/widgets' %>
