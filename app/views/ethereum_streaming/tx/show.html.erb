<div class='row'>
  <div class='col-12 col-lg-12 mb-4'>
    <div class='card' id='TransactionAttributes'></div>
  </div>
</div>
<div class='row'>
  <div class='col-12 col-lg-12 mb-4'>
    <div id='EventsAndCallsByTXHash' class='card'></div>
  </div>
</div>
<div class='row'>
  <div class='col-12 col-lg-12 mb-4'>
    <div class=" custom-control custom-checkbox custom-control-inline" id="DisplayFromToCheckbox">
      <input class="custom-control-input" type="checkbox" value="Show From-To" id="fromToCheckbox" checked>
      <label class="custom-control-label" for="fromToCheckbox" style="color: #2B7CE9;">
        Show From-To
      </label>
    </div>
    <div class=" custom-control custom-checkbox custom-control-inline" id="DisplayMoneyFlowCheckbox">
      <input class="custom-control-input" type="checkbox" value="Show Money Flow" id="moneyFlowCheckbox" checked>
      <label class="custom-control-label" for="moneyFlowCheckbox" style="color: #00ff00;">
        Show Money Flow
      </label>
    </div>
    <div id='GraphTX' class='card'></div>
  </div>
</div>

<script>
    class TransactionAttributes extends BootstrapVerticalTableComponent {
        configuration() {
            return {
                topElement: function (response) {
                    return [...response.EVM.Transactions, ...response.EVM.Transfers]
                },
                chainId: function (response) {
                    return response.EVM.Transactions[0]?.ChainId
                },
                columns: [
                    {
                        name: 'Block', cell: function (row) {
                            return row.Block?.Number
                        }, rendering: renderBlockLink,
                    },
                    {
                        name: 'Timestamp', cell: function (row) {
                            return row.Block?.Time
                        }, rendering: renderDate,
                    },
                    {
                        name: 'Sender', cell: function (row) {
                            return row.Transaction?.From
                        }, rendering: renderJustAddressLink,
                    },
                    {
                        name: 'Receiver', cell: function (row) {
                            return row.Transaction?.To
                        }, rendering: renderJustAddressLink,
                    },
                    {
                        name: 'Transfers count', cell: function (row) {
                            return row.t_count
                        },
                    },
                    {
                        name: 'Amount', cell: function (row) {
                            return row.t_sum
                        },
                    },
                    {
                        name: 'Gas Cost', cell: function (row) {
                            return row.sum
                        },
                    },
                    {
                        name: 'Gas Used', cell: function (row) {
                            return row.Block?.GasUsed
                        },
                    },
                    {
                        name: 'Transaction Fee', cell: function (row) {
                            return row.sum
                        },
                    },
                    {
                        name: 'Gas', cell: function (row) {
                            return row.Transaction?.Gas
                        },
                    },
                    {
                        name: 'Value', cell: function (row) {
                            return row.Transaction?.Value
                        },
                    },
                    {
                        name: 'Protected?', cell: function (row) {
                            return row.Transaction?.Protected
                        },
                    },
                    {
                        name: 'Success?', cell: function (row) {
                            return row.Transfer?.Success
                        },
                    },
                    {
                        name: 'Hash', cell: function (row) {
                            return row.Transaction?.Hash
                        },
                    },
                ]
            }
        }
    }
    class EventsAndCallsByTXHash extends TreeComponent {
        configuration() {
            return {
                topElement: function (response) {
                    return response.EVM
                },
                chainId: function (response) {
                    return response.EVM.Calls[0]?.ChainId || response.EVM.Events[0]?.ChainId
                },
                rendering: {
                    renderJustAddressLink,
                    renderSenderRecieverIcon,
                    renderMethodLink,
                    renderEventLink,
                    renderNumbers,
                    renderBytes32,
                }
            }
        }
    }

    class GraphTX extends GraphsComponent {
        configuration() {
            return {
                topElement: function (response) {
                    return response.EVM.Transfers
                },
                chainId: function (response) {
                    return response.EVM.Transfers[0]?.ChainId
                },
                title: 'Transfers and money flow',
                columns: [
                    {
                        name: 'Time', cell: function (row) {
                            return row.Block.Time
                        }, rendering: renderDate,
                    },
                    {
                        name: 'Sender', cell: function (row) {
                            return row.Transfer.Sender
                        },
                    },
                    {
                        name: 'Receiver', cell: function (row) {
                            return row.Transfer.Receiver
                        },
                    },
                    {
                        name: 'Value', cell: function (row) {
                            return row.Transfer.Amount
                        },rendering: renderNumbers,
                    },
                    {
                        name: 'Currency', cell: function (row) {
                            return row.Transfer.Currency.Symbol
                        },rendering: renderNumbers,
                    },
                ]
            }
        }
    }
    const variables = {
        network: '<%= @streaming%>',
        hash: '<%= @hash%>',
        // tx: '0xc2685aa55d1365a75100eb8efcc44ddeb031dab1c7ad083775a8bd681d54d223'
        //0xefe0b843e57edc4f0fe77a43da6755308559a6ddab5b2a01918603670888da80  (arbitrum)
        //0xefe0b843e57edc4f0fe77a43da6755308559a6ddab5b2a01918603670888da80  (arbitrum)
    };
    renderComponent([[TransactionAttributes, '#TransactionAttributes']], 'Transaction-Attributes_6', variables);
    renderComponent([[EventsAndCallsByTXHash, '#EventsAndCallsByTXHash'], [GraphTX, '#GraphTX']], 'Events-and-Calls_10_1', variables);

    //0xc2685aa55d1365a75100eb8efcc44ddeb031dab1c7ad083775a8bd681d54d223
    //0x93f1ecae8d620efe77cc089fcc829aea7efebe32e234c96c277a9c3f01fd8ad7
</script>
