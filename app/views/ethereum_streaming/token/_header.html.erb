<% content_for :title, t( "tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], token: @address) %>
<% content_for :description, t( "tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], token: @address) %>
<% content_for :keywords, t( "tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], token: @address) %>

<%= render partial: 'shared/title', locals: {
  icon: t("tabs.#{controller_name}.icon"),
  header: t( "tabs.#{controller_name}.header", network: @network[:name], token: copy_text(@token, 'text-info')).html_safe,
  reportrange:  true } %>

